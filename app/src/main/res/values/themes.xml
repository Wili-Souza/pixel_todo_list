<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="fontFamily">@font/freepixel</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="PurleTextLabel" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/medium_purple</item> // Activated State
        <item name="colorOnSurface">@color/medium_purple</item> // Normal State
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/medium_purple</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/medium_purple</item>
        <item name="colorControlNormal">@color/medium_purple</item>
        <item name="colorControlActivated">@color/medium_purple</item>
    </style>
</resources>